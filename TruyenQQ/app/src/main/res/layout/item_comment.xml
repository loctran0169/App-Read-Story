<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imgAvatarComment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_noavatar"
            app:siRadius="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/imgAvatarComment"
            app:layout_constraintStart_toEndOf="@id/imgAvatarComment"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvNameComment"
                android:text="Hữu Lộc"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Ẩn Danh"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_textview_stoke_black"
                app:layout_constraintTop_toTopOf="@id/tvNameComment"
                app:layout_constraintStart_toEndOf="@id/tvNameComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvIntent"
                android:text="shounen jump nghỉ 1 tuần nên ém chap mới á"
                app:layout_constraintTop_toBottomOf="@id/tvNameComment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvTime"
                android:text="6 Phút"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvIntent"
                app:layout_constraintStart_toStartOf="@id/tvIntent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/numComment"
                android:text="12"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_comment"
                app:layout_constraintTop_toBottomOf="@id/tvIntent"
                app:layout_constraintEnd_toEndOf="@id/tvIntent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/numLike"
                android:text="12"
                android:drawablePadding="3dp"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_like_comment"
                app:layout_constraintTop_toBottomOf="@id/tvIntent"
                app:layout_constraintEnd_toStartOf="@id/numComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>