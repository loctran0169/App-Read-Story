<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="140dp" xmlns:tools="http://schemas.android.com/tools">
    <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imgStoryItemHorizontal"
            android:src="@drawable/test2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:siRadius="7dp"
            app:siBorderColor="@android:color/white"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="130dp"/>
    <TextView
            android:id="@+id/tvStoryNameHorizontal"
            android:text="@string/appbar_scrolling_view_behavior"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/imgStoryItemHorizontal"
            app:layout_constraintStart_toEndOf="@id/imgStoryItemHorizontal"
            app:layout_constraintBottom_toTopOf="@id/rcvCategoryHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvCategoryHorizontal"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="@id/tvStoryNameHorizontal"
            app:layout_constraintTop_toBottomOf="@id/tvStoryNameHorizontal"
            app:layout_constraintBottom_toTopOf="@id/tvChapHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:itemCount="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
            android:id="@+id/tvChapHorizontal"
            android:text="Chương 123"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/tvStoryNameHorizontal"
            app:layout_constraintTop_toBottomOf="@id/rcvCategoryHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvStoryTimeHorizontal"
            android:text="14 phút"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:background="@drawable/border_backcolor_textview_time"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toTopOf="@id/imgStoryItemHorizontal"
            app:layout_constraintStart_toStartOf="@id/imgStoryItemHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>