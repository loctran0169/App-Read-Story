<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
                android:id="@+id/collapsingStory"
                app:title="Vua Hải Tặc,one Piece"
                app:expandedTitleGravity="bottom|center"
                app:expandedTitleMarginBottom="-50dp"
                app:maxLines="2"
                app:layout_collapseMode="parallax"
                app:expandedTitleTextAppearance="@style/ExpandedAppBar"
                app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:background="@android:color/white"
                app:contentScrim="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tvNameStory"
                        android:text="Maou No Ore Ga Dorei Elf Wo Yome Ni Shitanda Ga, Dou Medereba Ii?"
                        android:textSize="16sp"
                        android:textColor="@color/colorNameStory_drark"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/imgStory"
                        android:src="@drawable/test1"
                        android:scaleType="centerCrop"
                        app:siRadius="7dp"
                        app:siBorderColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15sp"
                        app:layout_constraintTop_toBottomOf="@id/tvNameStory"
                        app:layout_constraintStart_toStartOf="parent"
                        android:minWidth="100dp"
                        android:minHeight="130dp"
                        android:layout_width="100dp"
                        android:layout_height="130dp"/>
                <TextView
                        android:id="@+id/tvAuthor"
                        android:text="Tác giả: Miura Tadahiro"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toTopOf="@id/imgStory"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgStory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tvStatus"
                        android:text="Trạng thái: Đang cập nhật"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:layout_constraintTop_toBottomOf="@id/tvAuthor"
                        app:layout_constraintStart_toStartOf="@id/tvAuthor"
                        app:layout_constraintEnd_toEndOf="@id/tvAuthor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvStory"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus"
                        app:layout_constraintStart_toStartOf="@id/tvAuthor"
                        app:layout_constraintEnd_toEndOf="@id/tvAuthor"
                        tools:itemCount="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tvView"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:drawableStart="@drawable/ic_view"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@id/imgStory"
                        app:layout_constraintBottom_toBottomOf="@id/imgStory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tvLike"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_like"
                        android:drawablePadding="5dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@id/tvView"
                        app:layout_constraintTop_toTopOf="@id/tvView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/tvSubscribe"/>
                <TextView
                        android:id="@+id/tvSubscribe"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#ff2853"
                        android:drawableStart="@drawable/ic_heart"
                        android:drawablePadding="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toTopOf="@id/tvView"
                        app:layout_constraintStart_toEndOf="@id/tvLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Button
                        android:text="@string/lbReadNow"
                        android:textAllCaps="false"
                        android:drawableTop="@drawable/ic_read"
                        android:background="@drawable/border_button_read"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/imgStory"
                        app:layout_constraintEnd_toEndOf="@id/glRight"
                        app:layout_constraintStart_toStartOf="@id/glLeft"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="45dp"/>
                <androidx.constraintlayout.widget.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.35"
                        android:id="@+id/glLeft"/>
                <androidx.constraintlayout.widget.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.65"
                        android:id="@+id/glRight"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">
                <Button
                        android:id="@+id/btnBackRank"
                        android:visibility="gone"
                        android:background="@drawable/ic_before"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>
            </androidx.appcompat.widget.Toolbar>
        </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerStory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>